{
  "name": "edu-bloom-zone",
  "version": "1.0.0",
  "description": "MERN Stack Education Platform with Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "cd backend && npm start",
    "db:generate": "cd backend && npm run db:generate",
    "db:push": "cd backend && npm run db:push",
    "db:studio": "cd backend && npm run db:studio",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "setup": "npm run install-all && npm run db:generate"
  },
  "keywords": [
    "mern",
    "react",
    "express",
    "mongodb",
    "tailwind",
    "vite",
    "prisma"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
